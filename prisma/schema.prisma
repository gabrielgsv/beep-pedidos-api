// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id             Int        @id @default(autoincrement())
  email          String     @unique
  password       String
  name           String
  url            String     @unique
  phone          String?
  cpf_cnpj       String?
  created_at     DateTime   @default(now()) @map(name: "created_at")
  updated_at     DateTime   @updatedAt @map(name: "updated_at")
  cep            String?
  address        String?
  address_number Int?
  neighborhood   String?
  city           String?
  state          String?
  delivery_fee   Float?
  delivery_time  Int?
  complement     String?
  timetables     Json?
  image_url      String?
  stripeId       String?
  products       products[]
  orders         orders[]
}

model products {
  id          Int      @id @default(autoincrement())
  name        String
  image_url   String?
  description String
  price       Float
  additional  Json?
  created_at  DateTime @default(now()) @map(name: "created_at")
  updated_at  DateTime @updatedAt @map(name: "updated_at")
  user        user     @relation(fields: [user_id], references: [id])
  user_id     Int
}

model orders {
  id              Int      @id @default(autoincrement())
  name            String
  payment_type    String
  phone           String
  total           Float
  products_orders Json
  change          String?
  address         String?
  address_number  String?
  neighborhood    String?
  complement      String?
  cep             String?
  city            String?
  state           String?
  created_at      DateTime @default(now()) @map(name: "created_at")
  updated_at      DateTime @updatedAt @map(name: "updated_at")
  user            user     @relation(fields: [user_id], references: [id])
  user_id         Int
}
